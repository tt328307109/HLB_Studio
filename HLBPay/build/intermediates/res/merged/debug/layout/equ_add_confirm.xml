<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/reg_title_height"
        android:background="@drawable/title_bar_reg" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_reg_back"
            android:gravity="center_vertical"
            android:text="设备绑定"
            android:textColor="@color/white"
            android:textSize="@dimen/medium" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_reg"
                android:orientation="vertical"
                android:padding="10.0dip" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32.0dip"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/client_recharge_card_info_confirm"
                        android:textColor="@color/LKblue"
                        android:textSize="@dimen/small"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="请核对设备信息"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/small" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6.0dp"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip"
                    android:paddingTop="16.0dip" >

                    <TextView
                        android:layout_width="100.0dip"
                        android:layout_height="wrap_content"
                        android:text="设备序列号:"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/equ_add_ksn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7.0dip"
                        android:textSize="@dimen/medium" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/equ_add_confirm_btn"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/reg_btn_next_height"
                    android:layout_weight="1.0"
                    android:background="@drawable/selector_next_normal"
                    android:gravity="center"
                    android:text="绑定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>