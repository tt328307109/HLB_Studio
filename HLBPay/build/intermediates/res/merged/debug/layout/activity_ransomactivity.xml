<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_creditcard"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.lk.qf.pay.wedget.CommonTitleBar
            android:id="@+id/titlebar_apply_ransom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleview_height"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_creditCard_confirmGetCard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="确认到货"
            android:textColor="@color/white" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="收卡地址:"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <!--
      android:focusable="true"
        android:focusableInTouchMode="true"
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:background="#40404040"
        android:paddingBottom="20dp" >

        <EditText
            android:id="@+id/tv_apply_ransom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@null"
            android:hint="请设置收卡地址"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_apply_ransom"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_apply_ransom"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_5"
            android:text=" 点击确认 >> "
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_apply_ransom"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_5"
            android:text="修  改"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>