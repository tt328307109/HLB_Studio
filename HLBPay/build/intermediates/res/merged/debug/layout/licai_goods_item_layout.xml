<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_chanpin"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/tv_licai_new_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_biaoti"
            android:gravity="center"
            android:text="快易付理财1号"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_licai_new_nowLicai_Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="正在理财 (元):123"
            android:textColor="@color/licai_goods_tv_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3" >

            <TextView
                android:id="@+id/tv_licai_new_goods_nh_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="预期年化收益(%)"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_licai_new_goods_nh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_licai_new_goods_nh_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="4.22%"
                android:textColor="@color/licai_goods_tv_color"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_licai_new_goods_qg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="起购金额(元)"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_licai_new_goods_qg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_licai_new_goods_qg_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="7"
                android:textColor="@color/licai_goods_tv_color"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_licai_new_goods_qx_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品期限"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_licai_new_goods_qx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_licai_new_goods_qx_title"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="7"
                android:textColor="@color/licai_goods_tv_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_licai_new_goods_qx_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_licai_new_goods_qx"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_licai_new_goods_qx"
                android:text="天"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>

        <!--
             <ImageButton
            android:id="@+id/btn_licai_goods_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="10dp"
            android:background="@drawable/licai_new_buy_selector" />
        -->
    </LinearLayout>

</LinearLayout>