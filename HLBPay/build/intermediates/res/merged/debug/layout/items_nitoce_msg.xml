<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/item_tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
                android:layout_marginLeft="5dp"
        android:id="@+id/item_tv_notice_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_tv_notice_title"
        android:layout_marginTop="3dp"
        android:text="content" />

    <TextView
        android:textColor="#757575"
        android:layout_marginTop="5dp"
        android:id="@+id/item_tv_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_tv_notice_msg"
        android:layout_below="@+id/item_tv_notice_msg"
        android:text="2015-5-5" />

</RelativeLayout>