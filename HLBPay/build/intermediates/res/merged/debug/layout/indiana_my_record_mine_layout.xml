<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_indiana_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgimage_wo"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_indiana_mine_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/morentouxiang_boy" />

                <TextView
                    android:id="@+id/tv_indiana_mine_phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="15956565666"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="余额:"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_indiana_mine_coinNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:text="夺宝币"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_indiana_mine_topUp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lijicanyu_selector"
                    android:text="充值"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                style="@style/common_line_horizontal_style"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:id="@+id/rl_indiana_mine_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_biankuang_xian" >

                <TextView
                    android:id="@+id/tv_indiana_mine_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/icon_shouhuodizhi"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="我的收货地址"
                    android:textSize="14sp" />

                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_indiana_mine_isHaveAddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未完善"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/jiantou_sy" />
                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/common_line_horizontal_style"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <View
                style="@style/common_line_horizontal_style"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp" />

            <RelativeLayout
                android:id="@+id/rl_indiana_mine_indianaRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_biankuang_xian" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/icon_duobaojilu"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="夺宝记录"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/jiantou_sy" />
            </RelativeLayout>

            <View
                style="@style/common_line_horizontal_style"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/rl_indiana_mine_winnerRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_biankuang_xian" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/icon_zhongjiangjilu"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="中奖记录"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/jiantou_sy" />
            </RelativeLayout>

            <View
                style="@style/common_line_horizontal_style"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/rl_indiana_mine_myShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_biankuang_xian" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/icon_shaidan"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="我的晒单"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/jiantou_sy" />
            </RelativeLayout>

            <View
                style="@style/common_line_horizontal_style"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:id="@+id/rl_indiana_mine_CommonProblems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_biankuang_xian" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/icon_changjianwenti"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="常见问题"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/jiantou_sy" />
            </RelativeLayout>

            <View
                style="@style/common_line_horizontal_style"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>