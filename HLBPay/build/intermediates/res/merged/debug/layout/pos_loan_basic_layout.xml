<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <com.lk.qf.pay.wedget.CommonTitleBar
        android:id="@+id/titlebar_posLoan_basic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_basic_pos"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_posLoan_userName"
                        style="@style/text_posloan_title2"
                        android:text="李明" />

                    <RadioGroup
                        android:id="@+id/rg_posLoan_sex"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp" >

                        <RadioButton
                            android:id="@+id/rb_posLoan_sex_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:checked="true"
                            android:text="男"
                            android:textColor="@color/zicolor" />

                        <RadioButton
                            android:id="@+id/rb_posLoan_sex2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:text="女"
                            android:textColor="@color/zicolor" />
                    </RadioGroup>
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_posloan_title2"
                        android:text="婚姻状况" />

                    <RadioGroup
                        android:id="@+id/rg_posLoan_hunyin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp" >

                        <RadioButton
                            android:id="@+id/rb_posLoan_yihun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:checked="true"
                            android:text="已婚"
                            android:textColor="@color/zicolor" />

                        <RadioButton
                            android:id="@+id/rb_posLoan_weihun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:text="未婚"
                            android:textColor="@color/zicolor" />
                    </RadioGroup>
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_posloan_title2"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="国籍" />

                    <EditText
                        android:id="@+id/ed_posLoan_country"
                        style="@style/ed_posloan_info"
                        android:singleLine="true"
                        android:text="中国" />
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_posloan_title2"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="民族" />

                    <EditText
                        android:id="@+id/ed_posLoan_sitename"
                        style="@style/ed_posloan_info"
                        android:hint="请输入民族(如:汉族)"
                        android:singleLine="true" />
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_posloan_title2"
                        android:text="出生日期" />

                    <TextView
                        android:id="@+id/tv_posLoan_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="选择出生日期"
                        android:paddingLeft="30dp"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/lightgray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_posloan_phone"
                        style="@style/text_posloan_title2"
                        android:text="联系手机" />

                    <TextView
                        android:id="@+id/tv_posLoan_PhoneNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@null"
                        android:paddingLeft="30dp"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_posloan_email"
                        style="@style/text_posloan_title2"
                        android:text="邮箱" />

                    <EditText
                        android:id="@+id/ed_posLoan_email"
                        style="@style/ed_posloan_info"
                        android:hint="请输入联系邮箱"
                        android:singleLine="true" />
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_posloan_nowAddr"
                        style="@style/text_posloan_title2"
                        android:text="现住地址" />

                    <EditText
                        android:id="@+id/ed_posLoan_addressNow"
                        style="@style/ed_posloan_info"
                        android:hint="请输入现住地址" />
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_posloan_compayName"
                        style="@style/text_posloan_title2"
                        android:text="单位" />

                    <EditText
                        android:id="@+id/ed_posLoan_CompanyName"
                        style="@style/ed_posloan_info"
                        android:hint="请输入单位名称" />
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_posloan_companyAddress"
                        style="@style/text_posloan_title2"
                        android:text="单位地址" />

                    <EditText
                        android:id="@+id/ed_posLoan_CompanyAddress"
                        style="@style/ed_posloan_info"
                        android:hint="请输入单位地址" />
                </LinearLayout>

                <View style="@style/common_line_horizontal_style1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_companyPhone"
                        style="@style/text_posloan_title2"
                        android:text="单位电话" />

                    <EditText
                        android:id="@+id/ed_posLoan_CompanyPhoneNum"
                        style="@style/ed_posloan_info"
                        android:hint="请输入单位电话"
                        android:inputType="phone"
                        android:maxLength="11" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_posLoan_basic_next"
                style="@style/btntext_posloan"
                android:text="下一步" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>