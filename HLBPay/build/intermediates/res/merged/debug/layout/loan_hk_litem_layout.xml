<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/background_photo" >

    

    <TextView
        android:id="@+id/tv_polyloan_hk_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:text="0.12"
        android:textStyle="bold"
        android:textColor="@color/licai_tv_orange"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_polyloan_hk_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="本金"
        android:paddingRight="30dp"
        android:textColor="@color/zicolor"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_polyloan_hk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="201512120302"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_polyloan_hk_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
         android:layout_below="@id/tv_polyloan_hk_time"
        android:text="未处理"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <View
        style="@style/common_line_horizontal_style"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/tv_polyloan_hk_state"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>