<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <com.lk.qf.pay.wedget.CommonTitleBarYellow
        android:id="@+id/titlebar_editedit_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_biankuang_xian" >

        <TextView
            android:id="@+id/tv_indiana_edit_addr_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="收货人"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_indiana_edit_addr_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_indiana_edit_addr_name"
            android:background="@null" />
    </RelativeLayout>

    <View
        style="@style/common_line_horizontal_style"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_biankuang_xian" >

        <TextView
            android:id="@+id/tv_indiana_edit_addr_phonenum"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="联系电话"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_indiana_edit_addr_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_indiana_edit_addr_phonenum"
            android:background="@null"
            android:maxLength="11"
            android:inputType="phone" />
    </RelativeLayout>

    <View
        style="@style/common_line_horizontal_style"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_biankuang_xian"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_indiana_edit_addr_region"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="地区"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_indiana_edit_addr_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/address_jiantou_2"
            android:maxLength="3"
            android:text="省"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_indiana_edit_addr_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/address_jiantou_2"
            android:maxLength="4"
            android:text="市"
            android:textSize="16sp" />

        <!--
             <TextView
            android:id="@+id/tv_indiana_edit_addr_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_indiana_edit_addr_city"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/jiantou_sy"
            android:text="区"
            android:maxLength="3"
            android:textSize="16sp" />
        -->
    </LinearLayout>

    <View
        style="@style/common_line_horizontal_style"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_biankuang_xian" >

        <TextView
            android:id="@+id/tv_indiana_edit_addr_detailed"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="详细地址"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_indiana_edit_addr_Detailededit_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_indiana_edit_addr_detailed"
            android:background="@null"
            android:lines="2" />
    </RelativeLayout>

    <View
        style="@style/common_line_horizontal_style"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_biankuang_xian"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_indiana_edit_addr_default"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="设为默认"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <ToggleButton
            android:id="@+id/tb_indiana_edit_addr"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tb_select"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="(实物收货地址为用户实物奖品中奖后的收货地址,最多可添加三个)"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_indiana_edit_addr_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_next_normal"
        android:text="保存"
        android:textColor="@color/white" />

</LinearLayout>