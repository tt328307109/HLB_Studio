<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.lk.qf.pay.wedget.CommonTitleBar
        android:id="@+id/titlebar_jiesuan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/rg_jiesuan_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/biankuang_dailixinxi_1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="账户类型"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_jiesuan_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:checked="true"
                    android:text="个人"
                    android:textColor="@color/zicolor" />

                <RadioButton
                    android:id="@+id/rb_jiesuan_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="法人"
                    android:textColor="@color/zicolor" />

                <RadioButton
                    android:id="@+id/rb_jiesuan_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="对公"
                    android:textColor="@color/zicolor" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/biankuang_dailixinxi_1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="10dp"
                    android:text="开户名"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_jiesuan_kaihuName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="输入开户名"
                    android:singleLine="true"
                    android:textColorHint="@color/lightgray"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_fuzzy_query_select_bankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/biankuang_dailixinxi_1" >

                <TextView
                    android:id="@+id/tv_fuzzy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="开户银行"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_fuzzyQuery_select_bankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_fuzzy1"
                    android:hint="选择开户银行"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/lightgray"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/jiantou_sy" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_fuzzy_query_select_bankNamezh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/biankuang_dailixinxi_1" >

                <TextView
                    android:id="@+id/tv_fuzzy_query_select_zh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="开户支行"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_jiesuan_kaihuzhBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_fuzzy_query_select_zh"
                    android:hint="选择开户银行支行"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/lightgray"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/jiantou_sy" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="开户支行地址:"
                android:textColor="@color/zicolor"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_jiesuan_sheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="省:" />

                <Spinner
                    android:id="@+id/sp_jiesuan_sheng"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:dropDownWidth="100dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/tv_jiesuan_shi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="市:" />

                <Spinner
                    android:id="@+id/sp_jiesuan_shi"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/biankuang_5"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="银行卡号"
                    android:textSize="16sp" />

                <com.lk.qf.pay.wedget.view.MyXEdittextView
                    android:id="@+id/ed_jiesuan_kahao1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="输入银行卡号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/lightgray"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/biankuang_5"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="银行卡号"
                    android:textSize="16sp" />

                <com.lk.qf.pay.wedget.view.MyXEdittextView
                    android:id="@+id/ed_jiesuan_kahao2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="确认银行卡号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/lightgray"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_jiesuan_next"
                style="@style/btntext_posloan"
                android:text="下一步" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>