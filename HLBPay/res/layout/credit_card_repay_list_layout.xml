<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_creditcard"
    android:orientation="vertical" >

    <com.lk.qf.pay.wedget.CommonTitleBar
        android:id="@+id/titlebar_creditCard_repay_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height"
        android:orientation="vertical" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单位:元"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/tv_add_creditcard_repaylist"
            android:background="@drawable/bg_creditlist_num"
            android:text="已还金额" />

        <TextView
            android:id="@+id/tv_creditCard_repayList_yhrepayAccount"
            style="@style/tv_add_creditcard_repaylist"
            android:background="@color/white"
            android:text="一一"
            android:textColor="@color/credit_repay_mx_tv" />

        <TextView
            style="@style/tv_add_creditcard_repaylist"
            android:background="@drawable/bg_creditlist_num"
            android:text="未还金额" />

        <TextView
            android:id="@+id/tv_creditCard_repayList_whpayAccount"
            style="@style/tv_add_creditcard_repaylist"
            android:background="@color/white"
            android:text="一一"
            android:textColor="@color/credit_card_type" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/tv_add_creditcard_repaylist"
            android:background="@drawable/bg_creditlist_num"
            android:text="已还笔数" />

        <TextView
            android:id="@+id/tv_creditCard_repayList_yhrepayNum"
            style="@style/tv_add_creditcard_repaylist"
            android:background="@color/white"
            android:text="一一"
            android:textColor="@color/credit_repay_mx_tv" />

        <TextView
            style="@style/tv_add_creditcard_repaylist"
            android:background="@drawable/bg_creditlist_num"
            android:text="剩余笔数" />

        <TextView
            android:id="@+id/tv_creditCard_repayList_whpayNum"
            style="@style/tv_add_creditcard_repaylist"
            android:background="@color/white"
            android:text="一一"
            android:textColor="@color/credit_card_type" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/myPull_refresh_list_order_creditCard_repay"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        ptr:ptrMode="both" />

</LinearLayout>