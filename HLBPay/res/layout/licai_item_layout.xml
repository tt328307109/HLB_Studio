<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_licai_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="89"
        android:textColor="@color/zicolor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_licai_item_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="23456789"
        android:textColor="@color/account_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_licai_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_licai_item_type"
        android:layout_below="@id/tv_licai_item_account"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:text="201512120302"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <View
        style="@style/common_line_horizontal_style"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/tv_licai_item_time"
        android:layout_marginBottom="5dp" />

</RelativeLayout>