<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <com.lk.qf.pay.wedget.CommonTitleBarYellow
        android:id="@+id/titlebar_indiana_topUp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_272"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_top_up_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="选择夺宝币个数" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioGroup
                android:id="@+id/yi_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_10"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/chongzhi_account_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="10"
                    android:checked="true"
                    android:textColor="@color/topup_textview_selector" />

                <RadioButton
                    android:id="@+id/radio_20"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/chongzhi_account_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/topup_textview_selector" />

                <RadioButton
                    android:id="@+id/radio_50"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/chongzhi_account_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@color/topup_textview_selector" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/yi_group"
                android:layout_alignRight="@id/yi_group"
                android:layout_below="@id/yi_group"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/er_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio_100"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/chongzhi_account_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/topup_textview_selector" />

                    <RadioButton
                        android:id="@+id/radio_200"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/chongzhi_account_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="200"
                        android:textColor="@color/topup_textview_selector" />
                </RadioGroup>

                <EditText
                    android:id="@+id/ed_top_up_other"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/chongzhi_kuang_2"
                    android:gravity="center"
                    android:hint="其他"
                    android:inputType="number"
                    android:maxLength="7"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:textColorHint="@color/textblack"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:text="说明:1元=1个夺宝币"
            android:textColor="@color/topup_red"
            android:textScaleX="1.1"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_qianbao_chongzhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_biankuang_xian" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="钱包充值"
                    android:textColor="@color/topup_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="1元=1个夺宝币"
                    android:textColor="@color/topup_red"
                    android:textScaleX="1.1"
                    android:textSize="10sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/jiantou_sy" />
        </RelativeLayout>

        <View
            style="@style/common_line_horizontal_style"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:id="@+id/rl_jifen_chongzhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_biankuang_xian" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" >

                <TextView
                    android:id="@+id/tv_topup_jifen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="快易币兑换"
                    android:textColor="@color/topup_blue" />

                <TextView
                    android:id="@+id/tv_topup_jifen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_topup_jifen1"
                    android:gravity="center"
                    android:text="(有"
                    android:textColor="@color/topup_blue" />
                <TextView
                    android:id="@+id/tv_topup_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_topup_jifen2"
                    android:gravity="center"
                    android:text="一一"
                    android:textColor="@color/topup_blue" />
                <TextView
                    android:id="@+id/tv_topup_jifen3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_topup_jifen"
                    android:gravity="center"
                    android:text="个可兑换)"
                    android:textColor="@color/topup_blue" />

                <TextView
                    android:id="@+id/tv_topup_jifen4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_topup_jifen1"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="10快易币=1个夺宝币"
                    android:textColor="@color/topup_red"
                    android:textScaleX="1.1"
                    android:textSize="10sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/jiantou_sy" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>