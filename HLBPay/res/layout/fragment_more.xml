<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_more"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/blue_main" >

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/more_handPos_text"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dip"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="设备绑定"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/medium" />

                        <TextView
                            android:id="@+id/tv_more_pos_is"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/zicolor" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <RelativeLayout
                        android:id="@+id/rl_more_yajin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/more_yajin_text"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dip"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="押金管理"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/medium" />

                        <TextView
                            android:id="@+id/tv_more_yajin_is"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/zicolor" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true"
                            android:background="@color/lightgray" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/more_pwd_text"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dip"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="密码管理"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/medium" />

                        
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/more_shiming_text"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dip"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="实名认证"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/medium" />

                        <TextView
                            android:id="@+id/tv_more_shiming_is"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/zicolor" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/more_jiesuan_text"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dip"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="设置结算信息"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/medium" />

                        <TextView
                            android:id="@+id/tv_jiesuan_is"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/zicolor" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/more_photo_text"
                            android:layout_width="match_parent"
                            android:layout_height="48.0dip"
                            android:background="@drawable/selector_tab_activitygroup"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="上传证件照"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/medium" />

                        <TextView
                            android:id="@+id/tv_more_photo_is"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="@color/zicolor" >
                        </TextView>
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/more_share_text"
                        android:layout_width="match_parent"
                        android:layout_height="48.0dip"
                        android:background="@drawable/selector_tab_activitygroup"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="分享我们"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/more_feedback_text"
                        android:layout_width="match_parent"
                        android:layout_height="48.0dip"
                        android:background="@drawable/selector_tab_activitygroup"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="意见反馈"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/medium" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/more_help_text"
                        android:layout_width="match_parent"
                        android:layout_height="48.0dip"
                        android:background="@drawable/selector_tab_activitygroup"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="使用帮助"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/medium" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10.0dip"
                    android:background="@color/regBackGround" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <LinearLayout
                        android:id="@+id/merchant_contact_layout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/selector_tab_activitygroup"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="联系客服"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/medium" />

                        <TextView
                            android:id="@+id/more_contact_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:paddingRight="12dp"
                            android:text="@string/gs_phone_show"
                            android:textColor="@color/regBlue"
                            android:textSize="@dimen/small" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/lightgray" />

                    <LinearLayout
                        android:id="@+id/more_version_layout"
                        android:layout_width="match_parent"
                        android:layout_height="48.0dp"
                        android:background="@drawable/selector_tab_activitygroup"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="版本更新"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/medium" />

                        <TextView
                            android:id="@+id/more_version_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:paddingRight="12dp"
                            android:text="@string/verfiy_code"
                            android:textColor="@color/regBlue"
                            android:textSize="@dimen/small" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10.0dip"
                    android:background="@color/regBackGround" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:id="@+id/more_about_text"
                        android:layout_width="match_parent"
                        android:layout_height="48.0dip"
                        android:background="@drawable/selector_tab_activitygroup"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="关于我们"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48.0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_tab_activitygroup"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_more_safe_quit"
                        android:layout_width="match_parent"
                        android:layout_height="45.0dp"
                        android:background="@drawable/btn_safe_quit"
                        android:gravity="center"
                        android:text="@string/safe_quit"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>