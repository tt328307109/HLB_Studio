<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tv_xyk_huankuan_item_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥500"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_xyk_huankuan_item_shouxu_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="手续费:5元"
            android:textColor="@color/gray"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_xyk_huankuan_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="2015/02/03" />

        <TextView
            android:id="@+id/tv_xyk_huankuan_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_xyk_huankuan_item_time"
            android:layout_marginRight="20dp"
            android:text="处理中"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>