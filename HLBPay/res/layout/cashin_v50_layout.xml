<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >

    <com.lk.qf.pay.wedget.CommonTitleBar
        android:id="@+id/titlebar_confirm_v50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height" >
    </com.lk.qf.pay.wedget.CommonTitleBar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_reg"
                android:orientation="vertical"
                android:padding="10.0dip" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32.0dip"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/client_recharge_card_info_confirm"
                        android:textColor="@color/LKblue"
                        android:textSize="@dimen/small"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/cashin_check_info"
                        android:textColor="@color/textblack"
                        android:textSize="@dimen/small" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip"
                    android:paddingTop="16.0dip" >

                    <TextView
                        android:layout_width="100.0dip"
                        android:layout_height="wrap_content"
                        android:text="银行卡号:"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/cashin_card_no_text_v50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7.0dip"
                        android:textSize="@dimen/medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip"
                    android:paddingTop="16.0dip" >

                    <TextView
                        android:layout_width="100.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/client_result_recharge_trade_amount"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/cashin_pay_amt_text_v50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7.0dip"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cashin_rate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip"
                    android:paddingTop="16.0dip" >

                    <TextView
                        android:layout_width="100.0dip"
                        android:layout_height="wrap_content"
                        android:text="费率类型:"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/cashin_pay_rate_text_v50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/right32"
                        android:paddingLeft="7.0dip"
                        android:textSize="@dimen/medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16.0dip" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2.0dip"
                        android:background="@color/lightgray" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5.0dip"
                    android:paddingTop="5.0dip"
                    android:text="@string/cashin_trade_reminder"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/micro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/cashin_confirm_btn_v50"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/reg_btn_next_height"
                    android:layout_weight="1.0"
                    android:background="@drawable/login_selector"
                    android:gravity="center"
                    android:text="@string/pay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>