<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regBackGround"
    android:orientation="vertical" >

    <com.lk.qf.pay.wedget.CommonTitleBar
        android:id="@+id/titlebar_findpwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height" >
    </com.lk.qf.pay.wedget.CommonTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/biankuang_dailixinxi_1"
                    android:orientation="horizontal" >

                    <com.lk.qf.pay.wedget.view.MyXEdittextView
                        android:id="@+id/et_forget_verify_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/reg_input_height"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/grayline" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <EditText
                    android:id="@+id/et_pw1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/reg_input_height"
                    android:background="@drawable/biankuang_dailixinxi_1"
                    android:gravity="left|center"
                    android:hint="@string/inputPassWord"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/grayline" />

                <EditText
                    android:id="@+id/et_pw2"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/reg_input_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/biankuang_dailixinxi_1"
                    android:hint="@string/inputSecondTime"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grayline" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/biankuang_dailixinxi_1"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_forget_verify_phoneverify"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/reg_input_height"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColorHint="@color/grayline" />

                <Button
                    android:id="@+id/btn_vv_verify_getverify"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_next_normal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/getConfirmationCode"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/reg_btn_next_height"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/selector_next_normal"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/large" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>