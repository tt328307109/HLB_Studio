                    android:text="" />
            </RelativeLayout> -->

            <com.lk.qf.pay.wedget.view.ListViewForScrollView
                android:id="@+id/ll_list_indiana_goods_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:dividerHeight="5dp"
                android:focusable="false" />
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <RelativeLayout
        android:id="@+id/rl_goodsInfo_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom" >

        <ImageButton
            android:id="@+id/ib_indiana_goods_info_addBuycar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:src="@drawable/indiana_btn_buy_car_selector" />

        <Button
            android:id="@+id/btn_indiana_goods_info_lijicanyu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/lijicanyu_selector"
            android:text="立即参与"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>