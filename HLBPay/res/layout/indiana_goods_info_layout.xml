<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.lk.qf.pay.wedget.CommonTitleBarYellow
            android:id="@+id/titlebar_goodsinfo_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleview_height"
            android:focusableInTouchMode="true"
            android:orientation="vertical" />

        <ImageButton
            android:id="@+id/ib_indiana_goodsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:background="@drawable/goodsinfo_buycar_selector" />
    </FrameLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/psl_goods_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ptr:ptrMode="both" >

        <LinearLayout
            android:id="@+id/ll_indiana_goods_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.lk.qf.pay.wedget.view.AutoPagerView
                android:id="@+id/auto_pagerview_indiana_goodsInfo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:minHeight="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:id="@+id/rl_indiana_goods_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_indiana_goods_info_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/btn_yijiexiao"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_indiana_goods_info_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tv_indiana_goods_info_type"
                            android:text="一一"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <ProgressBar
                        android:id="@+id/pb_indiana_goods_info"
                        style="@style/mProgress_horizontal"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_indiana_goods_info_name"
                        android:layout_marginTop="10dp"
                        android:progress="80"
                        android:visibility="visible" >
                    </ProgressBar>

                    <RelativeLayout
                        android:id="@+id/rl_indiana_goodsInfo_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pb_indiana_goods_info"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:id="@+id/tv_total_need_indiana_goods_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总需:"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tv_total_need_indiana_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tv_total_need_indiana_goods_info"
                            android:text="一一"
                            android:textColor="@color/gray" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pb_indiana_goods_info"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/rl_indiana_goodsInfo_total" >

                        <TextView
                            android:id="@+id/tv_total_remaining_indiana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余:"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tv_total_remaining_indiana_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tv_total_remaining_indiana"
                            android:text="一一"
                            android:textColor="@color/red" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_indiana_goodsInfo_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/biankuang_dailixinxi_1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="您还没参加,赶快参加吧"
                android:textColor="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_indiana_show_winner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="gone" >

                <FrameLayout
                    android:id="@+id/fl_indiana_winning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/img_indiana_winner_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/morentouxiang_boy" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/biaoqian_huojiangzhe" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_indiana_winner_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/fl_indiana_winning"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/indiana_goodsInfo_tv"
                            android:text="中奖者:"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tv_indiana_winner_name"
                            style="@style/indiana_goodsInfo_tv"
                            android:text="一一"
                            android:textColor="@color/blue_main" />
                    </LinearLayout>

                    <!--
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/indiana_goodsInfo_tv"
                            android:text="中奖号码:"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tv_indiana_winner_phoneNUm"
                            style="@style/indiana_goodsInfo_tv"
                            android:text="dddddddd" />
                    </LinearLayout>
                    -->


                    <!--
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/indiana_goodsInfo_tv"
                            android:text="本期参与:"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tv_indiana_info_Num"
                            style="@style/indiana_goodsInfo_tv"
                            android:text="dddddddd" />
                    </LinearLayout>
                    -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/indiana_goodsInfo_tv"
                            android:text="揭晓时间:"
                            android:textColor="@color/gray" />

                        <TextView
                            android:id="@+id/tv_indiana_winner_time"
                            style="@style/indiana_goodsInfo_tv"
                            android:text="一一" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_indiana_winner_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_indiana_winner_info"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_zhongjianghao"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="5dp"
                    android:text="幸运号码:一一"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- <RelativeLayout
                android:id="@+id/rl_Indiana_wangqijiexiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sy_background"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    style="@style/text_sy_title"
                    android:paddingBottom="5dp"
                    android:text="往期揭晓"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_sy_all_account"
