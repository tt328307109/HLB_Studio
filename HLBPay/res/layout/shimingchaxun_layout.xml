<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_photo"
    android:orientation="vertical" >

    <com.lk.qf.pay.wedget.CommonTitleBar
        android:id="@+id/titlebar_shimingchaxun"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height"
        android:orientation="vertical" >
    </com.lk.qf.pay.wedget.CommonTitleBar>

    <ImageView
        android:id="@+id/img_userPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tv_shimingchaxun_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:text="姓名"
            android:textColor="@color/zicolor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed_shimingchaxun_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/lightgray"
            android:layout_toRightOf="@id/tv_shimingchaxun_name"
            android:background="@drawable/biankuang_shimingchaxun_01"
            android:gravity="center_vertical"
            android:hint="输入姓名"
            android:paddingLeft="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tv_shimingchaxun_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="身份证号"
            android:layout_marginLeft="10dp"
            android:textColor="@color/zicolor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed_shimingchaxun_cardNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
             android:textColorHint="@color/lightgray"
            android:layout_toRightOf="@id/tv_shimingchaxun_card"
            android:background="@drawable/biankuang_shimingchaxun_01"
            android:gravity="center_vertical"
            android:hint="输入身份证号"
            android:paddingLeft="20dp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_shimingchaxun_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shimingchaxun_selector" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="提示:该功能每成功一次,会从您虚拟钱包里扣除5元."
        android:textColor="@color/zicolor"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/rl_shiming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_shimingchaxun_query"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_shimingchaxun_1"
                style="@style/my_textview"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="" />

            <TextView
                android:id="@+id/tv_shimingchaxun_jieguo"
                style="@style/my_textview"
                android:layout_alignTop="@id/tv_shimingchaxun_1"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/tv_shimingchaxun_1"
                android:text="" />

            <TextView
                android:id="@+id/tv_shimingchaxun_2"
                style="@style/my_textview"
                android:layout_alignRight="@id/tv_shimingchaxun_1"
                android:layout_below="@id/tv_shimingchaxun_1"
                android:layout_marginTop="20dp"
                android:text="" />

            <TextView
                android:id="@+id/tv_shimingchaxun_jieguoName"
                style="@style/my_textview"
                android:layout_alignLeft="@id/tv_shimingchaxun_jieguo"
                android:layout_alignTop="@id/tv_shimingchaxun_2"
                android:layout_below="@id/tv_shimingchaxun_jieguo"
                android:text="" />

            <TextView
                android:id="@+id/tv_shimingchaxun_3"
                style="@style/my_textview"
                android:layout_alignRight="@id/tv_shimingchaxun_1"
                android:layout_below="@id/tv_shimingchaxun_2"
                android:layout_marginTop="20dp"
                android:text="" />

            <TextView
                android:id="@+id/tv_shimingchaxun_jieguoSex"
                style="@style/my_textview"
                android:layout_alignLeft="@id/tv_shimingchaxun_jieguoName"
                android:layout_alignTop="@id/tv_shimingchaxun_3"
                android:layout_below="@id/tv_shimingchaxun_jieguoName"
                android:text="" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_shimingrenzheng_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="matrix" />
    </LinearLayout>

</LinearLayout>