<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <FrameLayout
            android:id="@+id/fl_indiana_announce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img_indiana_announced_goods_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/morentupain_1" />

            <ImageView
                android:id="@+id/img_indiana_latest_announced_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/icon_zhengzaijiexiao" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/fl_indiana_announce"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_indiana_announced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一一"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价值:"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_indiana_announced_goods_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="一一"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/jinbi_1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textScaleX="1.1"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_indiana_announced_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text=""
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_indiana_shijian"
                android:drawablePadding="10dp"
                android:textColor="@color/indiana_time"
                android:textScaleX="1.2"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll_indiana_announced_winnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中奖者:"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_indiana_announced_WinnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_indiana_announced_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="揭晓时间:"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_indiana_announced_openTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>