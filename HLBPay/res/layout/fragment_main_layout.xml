<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.lk.bhb.pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:background="@drawable/title_bar_reg"
                android:orientation="vertical" >

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="首页"
                    android:textSize="18sp" />

                <View
                    style="@style/common_line_horizontal_style"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true" />

                <ImageButton
                    android:id="@+id/notice_main"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/msg48" />
            </RelativeLayout>

            <com.lk.qf.pay.wedget.flashview.FlashView
                android:id="@+id/cycleview_main"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:minHeight="140dp"
                app:effect="cube" >
            </com.lk.qf.pay.wedget.flashview.FlashView>
            <!-- <View
                    style="@style/common_line_horizontal_style"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical" >
                <!-- 1 -->

			<!-- <View
                    style="@style/common_line_horizontal_style"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp" /> -->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.lk.qf.pay.wedget.SquareView
                        android:id="@+id/function_menu_0"
                        style="@style/function_service_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pic_menu_0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="收款"
                            android:textSize="14sp" />
                    </com.lk.qf.pay.wedget.SquareView>

                    <com.lk.qf.pay.wedget.SquareView
                        android:id="@+id/function_menu_1"
                        style="@style/function_service_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pic_menu_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="余额查询"
                            android:textSize="14sp" />
                    </com.lk.qf.pay.wedget.SquareView>

                    <com.lk.qf.pay.wedget.SquareView
                        android:id="@+id/function_menu_2"
                        style="@style/function_service_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pic_menu_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="理财"
                            android:textSize="14sp" />
                    </com.lk.qf.pay.wedget.SquareView>
                </LinearLayout>
                <!-- 2 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.lk.qf.pay.wedget.SquareView
                        android:id="@+id/function_menu_3"
                        style="@style/function_service_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pic_menu_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="手机充值"
                            android:textSize="14sp" />
                    </com.lk.qf.pay.wedget.SquareView>
     

                    <com.lk.qf.pay.wedget.SquareView
                        android:id="@+id/function_menu_4"
                        style="@style/function_service_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pic_menu_4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="交易记录"
                            android:textSize="14sp" />
                    </com.lk.qf.pay.wedget.SquareView>
                    
				<com.lk.qf.pay.wedget.SquareView
                        android:id="@+id/function_menu_5"
                        style="@style/function_service_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pic_menu_5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="信贷"
                            android:textSize="14sp" />
                    </com.lk.qf.pay.wedget.SquareView>
  
                </LinearLayout>
				<!-- <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="100dp"
				    android:orientation="horizontal">
				    <ImageView 
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1"
				        android:background="@drawable/bianmingfuwu"/>
				    <ImageView 
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1"
				        android:background="@drawable/bianmingfuwu"/>
				</LinearLayout> -->          
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>