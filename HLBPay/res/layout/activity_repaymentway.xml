<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_creditcard"
    android:layout_height="match_parent" >

    <com.lk.qf.pay.wedget.CommonTitleBar
        android:id="@+id/titlebar_choose_repaymentway"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleview_height"
        android:orientation="vertical" >
    </com.lk.qf.pay.wedget.CommonTitleBar>

    <Button
        android:id="@+id/btn_creditCard_applyRepay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button1"
        android:text="申请还款"
        android:textColor="#2a5378"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_creditCard_payByCardNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_creditCard_applyRepay"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1"
        android:text="卡立刷"
        android:textColor="#2a5378"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_creditCard_repayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_creditCard_payByCardNow"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1"
        android:text="还款明细"
        android:textColor="#2a5378"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_creditCard_redemption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_creditCard_repayList"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1"
        android:text="赎回"
        android:textColor="#2a5378"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_creditCard_queryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_creditCard_redemption"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1"
        android:text="查看邮寄地址"
        android:textColor="#2a5378"
        android:textSize="20sp" />
    
    

</RelativeLayout>