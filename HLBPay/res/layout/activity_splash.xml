<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.lk.bhb.pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_spash"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_spash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:visibility="gone" >

        <com.lk.qf.pay.wedget.view.RoundProgressBar
            android:id="@+id/spash_pb"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android_custom:roundColor="@color/gray"
            android_custom:roundProgressColor="@color/lightgray"
            android_custom:roundWidth="3dip"
            android_custom:textIsDisplayable="false" />

        <TextView
            android:id="@+id/tv_spash_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="跳过"
            android:textColor="@color/zicolor"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>